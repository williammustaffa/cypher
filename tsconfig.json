{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@actors/*": ["demo/actors/*"],
      "@scenes/*": ["demo/scenes/*"],
      "@sounds/*": ["demo/sounds/*"],
      "@sprites/*": ["demo/sprites/*"]
    }
  },
  "include": ["src", "demo"],
  "exclude": ["dist", "node_modules", "webpack"]
}