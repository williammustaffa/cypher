{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "paths": {
      "@core/*": ["./core/*"],
      "@actors/*": ["./src/actors/*"],
      "@scenes/*": ["./src/scenes/*"],
      "@sounds/*": ["./src/sounds/*"],
      "@sprites/*": ["./src/sprites/*"]
    }
  },
  "include": ["./core/*", "./src/*"]
}